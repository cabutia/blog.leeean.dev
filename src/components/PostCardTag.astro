---
import { PAGES } from "@/consts";
import { url } from "@/utils/url";
import type { CollectionEntry } from "astro:content";

type Props = {
    tag: CollectionEntry<"tags">;
};
const { tag } = Astro.props;
---

<a
    href={url(PAGES.TAG_LINK, { id: tag.id })}
    class="inline-flex flex-center text-sm bg-gray-100 px-1 rounded border-b border-gray-200 text-gray-700"
>
    {tag.data.label}
</a>
