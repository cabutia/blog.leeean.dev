---
import BaseHead from "@/components/BaseHead.astro";
import Container from "@/components/Container.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { url } from "@/utils/url";
import { PAGES } from "@/consts";
---

<BaseLayout>
    <Fragment slot="head">
        <BaseHead title={"Page not found"} description={"The page you're looking for doesn't exist"} />
    </Fragment>

    <div class="w-screen min-h-screen flex-center bg-gray-50 relative overflow-hidden">
        <Container class="flex-center">
            <div class="w-full flex gap-8">
                <div class="flex flex-col">
                    <h1 class="text-7xl font-bold">Page not found</h1>
                    <p class="text-4xl mt-6">Looks like the page you're looking for does not exist</p>
                    <p class="text-4xl">You can check out the latests posts anyways!</p>
                    <div class="w-full flex flex-col items-start mt-6">
                        <a
                            href={url(PAGES.LATEST_POSTS)}
                            class="text-2xl text-primary-50 bg-primary-500 px-8 py-4 rounded-full"
                        >
                            Take me there!
                        </a>
                    </div>
                </div>
            </div>
        </Container>
        <div class="absolute -right-16 -bottom-16">
            <span class="font-black text-gray-200 leading-4 text-[48rem]">404</span>
        </div>
    </div>
</BaseLayout>
